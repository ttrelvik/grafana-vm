[auth.generic_oauth]
enabled = true
name = Microsoft
allow_sign_up = true
client_id = {{ lookup('env', 'GRAFANA_OAUTH_CLIENT_ID') }}
client_secret = {{ lookup('env', 'GRAFANA_OAUTH_CLIENT_SECRET') }}
scopes = openid email profile
auth_url = https://login.microsoftonline.com/{{ lookup('env', 'ENTRA_TENANT_ID') }}/oauth2/v2.0/authorize
token_url = https://login.microsoftonline.com/{{ lookup('env', 'ENTRA_TENANT_ID') }}/oauth2/v2.0/token
api_url = https://graph.microsoft.com/v1.0/me

[auth.generic_oauth.group_mapping]
admin_group = {{ lookup('env', 'GRAFANA_OAUTH_ADMIN_GROUP_ID') }}